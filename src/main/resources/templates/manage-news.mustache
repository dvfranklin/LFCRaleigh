<form action="add-news" method="post">
    <input type="text" name="title" placeholder="Title" size="102"><br>
    <textarea name="body" placeholder="News goes here!" cols="100" rows="10"></textarea><br>
    <input type="datetime-local" name="dateTime" value="{{now}}" hidden>
    <button type="submit">Post it!</button>
</form>


    <table class="table">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Timestamp</th>
            <th></th>
            <th></th>
        </tr>
        {{#news}}
        <tr>
            <td>{{title}}</td>
            <td>{{body}}</td>
            <td>{{dateTime}}</td>
        <td>
        <form action="edit-news" method="get">
            <input type="hidden" name="id" value="{{id}}">
            <button type="submit" class="btn btn-warning">Edit  <i class="fa fa-edit"></i></button>
        </form>
        </td>
        <td>
        <form action="delete-news" method="get">
            <input type="hidden" name="id" value="{{id}}">
            <button type="submit" class="btn btn-danger">Delete  <i class="fa fa-trash"></i></button>
        </form>
        </td>
        </tr>
        {{/news}}
    </table>
