<form action="add-event" method="post">
    <input type="text" name="dateTime" placeholder="Enter Date and Time">
    <input type="text" name="location" placeholder="Enter Location">
    <input type="text" name="description" placeholder="Describe Event">
    <button type="submit" class="btn btn-primary">Add Event</button>
</form>

{{#events}}
    <table>
        <tr>
            <th>Date/Time</th>
            <th>Location</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <tr>
            <td>{{dateTime}}</td>
            <td>{{location}}</td>
            <td>{{description}}</td>
            <td>
                <form action="/edit-event" method="get">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" class="btn btn-warning">Edit  <i class="fa fa-edit"></i></button>
                </form>
            </td>
            <td>
                <form action="/delete-event" method="get">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" class="btn btn-danger">Delete  <i class="fa fa-trash"></i></button>
                </form>
            </td>
        </tr>
    </table>
{{/events}}